datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
  output   = "./ERD.pdf"
}

enum Role {
  EMPLOYEE
  FRANCHISEE
  OPERATOR
  MANAGER
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String
  role     Role
  sales    Sale[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("user")
}

model Franchise {
  id        String     @id @default(uuid())
  name      String
  customers Customer[]
  Sale      Sale[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("franchise")
}

model Customer {
  id          String     @id @default(uuid())
  name        String
  franchise   Franchise? @relation(fields: [franchiseId], references: [id])
  franchiseId String?
  sales       Sale[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("customer")
}

model Sale {
  id          String     @id @default(uuid())
  customer    Customer?  @relation(fields: [customerId], references: [id])
  customerId  String?
  user        User?      @relation(fields: [userId], references: [id])
  userId      String?
  franchise   Franchise? @relation(fields: [franchiseId], references: [id])
  franchiseId String?

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("sale")
}
